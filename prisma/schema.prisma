// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  posts Post[]
  image Media? @relation(fields: [image_id], references: [id], onDelete: SetNull)
  image_id  Int?
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  slug      String @unique
  content   String?
  published Int
  author    User?   @relation(fields: [author_id], references: [id], onDelete: SetNull)
  author_id  Int?
  image Media? @relation(fields: [image_id], references: [id], onDelete: SetNull)
  image_id  Int?
  categories Categories_On_Posts[] 
}

model Post_Category {
  id    Int    @id @default(autoincrement())
  name  String
  slug  String @unique
  image Media? @relation(fields: [image_id], references: [id], onDelete: SetNull)
  image_id Int?
  posts Categories_On_Posts[]
}

model Categories_On_Posts {
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  post_id     Int 
  category   Post_Category @relation(fields: [category_id], references: [id])
  category_id Int 

  @@id([post_id, category_id])
}

model Media {
  id    Int    @id @default(autoincrement())
  name  String @unique
  post_categories Post_Category[]
  posts Post[]
  users User[]
}

model Password_Reset {
  user_id  Int @unique
  token? String @unique
  expires? BigInt
}