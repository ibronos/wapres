// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  posts Post[]
  image Media? @relation(fields: [image_id], references: [id], onDelete: SetNull)
  image_id  Int?
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User?    @relation(fields: [author_id], references: [id], onDelete: SetNull)
  author_id  Int?
  categories Post_Category? @relation(fields: [category_id], references: [id], onDelete: SetNull)
  category_id Int?
  image Media? @relation(fields: [image_id], references: [id], onDelete: SetNull)
  image_id  Int?
}

model Post_Category {
  id    Int    @id @default(autoincrement())
  name  String
  slug  String @unique
  posts Post[]
  image Media? @relation(fields: [image_id], references: [id], onDelete: SetNull)
  image_id Int?
}

model Media {
  id    Int    @id @default(autoincrement())
  name  String @unique
  post_categories Post_Category[]
  posts Post[]
  users User[]
}